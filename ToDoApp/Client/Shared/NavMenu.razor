<div class="top-row ps-3 navbar navbar-dark">
	<div class="container-fluid">
		<a class="navbar-brand" href="">ToDoApp</a>
		<button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
			<span class="navbar-toggler-icon"></span>
		</button>
	</div>
</div>

<div class="@NavMenuCssClass text-white">
	<nav class="flex-column">
		<div class="nav-item px-3">
			<NavLink class="nav-link text-white" href="@PageRoute.Home" Match="NavLinkMatch.All">
				<span class="oi oi-home" aria-hidden="true"></span> Home
			</NavLink>
		</div>
		<div class="nav-item px-3">
			<NavLink class="nav-link text-white" href="@PageRoute.Counter">
				<span class="oi oi-plus" aria-hidden="true"></span> Counter
			</NavLink>
		</div>
		<AuthorizeView Roles="Admin">
			<div class="nav-item px-3">
				<NavLink class="nav-link text-white" href="@PageRoute.AdminDashboard">
					<span class="oi oi-dashboard" aria-hidden="true"></span> Dashboard
				</NavLink>
			</div>
		</AuthorizeView>
	</nav>
</div>

@code {
	private bool collapseNavMenu = false;

	private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

	private void ToggleNavMenu()
	{
		collapseNavMenu = !collapseNavMenu;
	}
}
